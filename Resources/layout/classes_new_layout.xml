<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/returnBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?android:attr/colorBackground"
            android:elevation="0dp"
            android:src="@drawable/back"
            android:padding="0dp"
            android:minWidth="0dp"
            android:layout_marginVertical="10dp"
            android:minHeight="0dp" />

        <TextView
            android:text="Add a New Class"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:gravity="center"
            android:layout_marginVertical="15dp"
            android:id="@+id/title" />

        <TextView
            android:text="Enter Class Code:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:id="@+id/classCodeLbl" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/classCodeTxt" />

        <TextView
            android:text="Enter Class Name:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:id="@+id/classNameLbl" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/classNameTxt" />
    </LinearLayout>

    <Button
        android:text="Add Class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addClassBtn"
        android:layout_alignParentBottom="true" />
</RelativeLayout>