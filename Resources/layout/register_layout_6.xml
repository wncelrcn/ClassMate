<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        
            
        <ImageButton
            android:id="@+id/returnBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?android:attr/colorBackground"
            android:elevation="0dp"
            android:src="@drawable/back"
            android:padding="0dp"
            android:minWidth="0dp"
            android:layout_marginVertical="10dp"
            android:minHeight="0dp" />
      
        <TextView
            android:text="Privacy Notice"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/title" />
        <TextView
            android:text="I agree to the terms and conditions of that are provided to me and I choose to follow them, all procedures and no insult and back stab of any kind."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:id="@id/desc" />
        <CheckBox
            android:text="I have read and agree to the Terms and Conditions stated above."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/agreeCheckBox" 
            android:layout_marginVertical="10dp"/>


     

        
    </LinearLayout>

    <Button
        android:text="Continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:id="@+id/nextBtn" />

</RelativeLayout>
